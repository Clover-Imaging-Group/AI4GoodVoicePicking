{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "hostingPlanName": {
      "type": "string",
      "minLength": 1
    },
    "skuName": {
      "type": "string",
      "defaultValue": "S1",
      "allowedValues": [
        "F1",
        "D1",
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1",
        "P2",
        "P3",
        "P4"
      ],
      "metadata": {
        "description": "Describes plan's pricing tier and capacity. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
      }
    },
    "skuNameQna": {
      "type": "string",
      "defaultValue": "S0",
      "allowedValues": [
        "F1",
        "D1",
        "B1",
        "B2",
        "B3",
        "S0",
        "S1",
        "S2",
        "S3",
        "P1",
        "P2",
        "P3",
        "P4"
      ],
      "metadata": {
        "description": "Describes plan's pricing tier and capacity. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
      }
    },
    "skuNameLuis": {
      "type": "string",
      "defaultValue": "F0",
      "allowedValues": [
        "F0",
        "F1",
        "D1",
        "B1",
        "B2",
        "B3",
        "S0",
        "S1",
        "S2",
        "S3",
        "P1",
        "P2",
        "P3",
        "P4"
      ],
      "metadata": {
        "description": "Describes plan's pricing tier and capacity. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
      }
    },
    "skuCapacity": {
      "type": "int",
      "defaultValue": 1,
      "minValue": 1,
      "metadata": {
        "description": "Describes plan's instance count"
      }
    }
  },
  "variables": {
    "webSiteName": "[concat('oosAi4GoodWebApp-', uniqueString(resourceGroup().id))]",
    "webSiteNameQna": "[concat('oosAi4GoodQna-', uniqueString(resourceGroup().id))]",
    "qnaMakerName": "[concat('oosAi4GoodQnaMaker-', uniqueString(resourceGroup().id))]",
    "accounts_oosAi4Good_LUIS_name": "[concat('oosAi4Good-LUIS-', uniqueString(resourceGroup().id))]",
    "accounts_oosAi4Good_LUIS_Authoring_name": "[concat('oosAi4Good-LUIS-Authoring-', uniqueString(resourceGroup().id))]",
    "accounts_oosAi4Good_Speech_name": "[concat('oosAi4Good-Speech-', uniqueString(resourceGroup().id))]"
  },
  "resources": [
    {
      "apiVersion": "2015-08-01",
      "name": "[parameters('hostingPlanName')]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "oosAi4GoodAppServicePlan"
      },
      "sku": {
        "name": "[parameters('skuName')]",
        "capacity": "[parameters('skuCapacity')]"
      },
      "properties": {
        "name": "[parameters('hostingPlanName')]"
      }
    },
    {
      "apiVersion": "2015-08-01",
      "name": "[variables('webSiteName')]",
      "type": "Microsoft.Web/sites",
      "location": "[resourceGroup().location]",
      "tags": {
        "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]": "Resource",
        "displayName": "oosAi4GoodWebApp"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]"
      ],
      "properties": {
        "name": "[variables('webSiteName')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]"
      }
    },
    {
      "apiVersion": "2015-08-01",
      "name": "[variables('webSiteNameQna')]",
      "type": "Microsoft.Web/sites",
      "location": "[resourceGroup().location]",
      "tags": {
        "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]": "Resource",
        "displayName": "oosAi4GoodQna"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]"
      ],
      "properties": {
        "name": "[variables('webSiteNameQna')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]"
      }
    },
    {
      "apiVersion": "2014-04-01",
      "name": "[concat(parameters('hostingPlanName'), '-', resourceGroup().name)]",
      "type": "Microsoft.Insights/autoscalesettings",
      "location": "[resourceGroup().location]",
      "tags": {
        "[concat('hidden-link:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]": "Resource",
        "displayName": "AutoScaleSettings"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]"
      ],
      "properties": {
        "profiles": [
          {
            "name": "Default",
            "capacity": {
              "minimum": 1,
              "maximum": 2,
              "default": 1
            },
            "rules": [
              {
                "metricTrigger": {
                  "metricName": "CpuPercentage",
                  "metricResourceUri": "[concat(resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]",
                  "timeGrain": "PT1M",
                  "statistic": "Average",
                  "timeWindow": "PT10M",
                  "timeAggregation": "Average",
                  "operator": "GreaterThan",
                  "threshold": 80.0
                },
                "scaleAction": {
                  "direction": "Increase",
                  "type": "ChangeCount",
                  "value": 1,
                  "cooldown": "PT10M"
                }
              },
              {
                "metricTrigger": {
                  "metricName": "CpuPercentage",
                  "metricResourceUri": "[concat(resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]",
                  "timeGrain": "PT1M",
                  "statistic": "Average",
                  "timeWindow": "PT1H",
                  "timeAggregation": "Average",
                  "operator": "LessThan",
                  "threshold": 60.0
                },
                "scaleAction": {
                  "direction": "Decrease",
                  "type": "ChangeCount",
                  "value": 1,
                  "cooldown": "PT1H"
                }
              }
            ]
          }
        ],
        "enabled": false,
        "name": "[concat(parameters('hostingPlanName'), '-', resourceGroup().name)]",
        "targetResourceUri": "[concat(resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]"
      }
    },
    {
      "apiVersion": "2014-04-01",
      "name": "[variables('webSiteName')]",
      "type": "Microsoft.Insights/components",
      "location": "East US",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites/', variables('webSiteName'))]"
      ],
      "tags": {
        "[concat('hidden-link:', resourceGroup().id, '/providers/Microsoft.Web/sites/', variables('webSiteName'))]": "Resource",
        "displayName": "oosAi4GoodWeb_AppInsightsComponent"
      },
      "properties": {
        "applicationId": "[variables('webSiteName')]"
      }
    },
    {
      "apiVersion": "2014-04-01",
      "name": "[variables('webSiteNameQna')]",
      "type": "Microsoft.Insights/components",
      "location": "East US",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites/', variables('webSiteNameQna'))]"
      ],
      "tags": {
        "[concat('hidden-link:', resourceGroup().id, '/providers/Microsoft.Web/sites/', variables('webSiteNameQna'))]": "Resource",
        "displayName": "oosAi4GoodQna_AppInsightsComponent"
      },
      "properties": {
        "applicationId": "[variables('webSiteNameQna')]"
      }
    },
    {
      "apiVersion": "2017-04-18",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites/', variables('webSiteNameQna'))]"
      ],
      "tags": {
        "displayName": "oosAi4GoodQnaMaker"
      },
      "kind": "QnAMaker",
      "location": "West US",
      "name": "[variables('qnaMakerName')]",
      "properties": {
        "apiProperties": {
          "qnaRuntimeEndpoint": "[concat('https://',reference(resourceId('Microsoft.Web/sites', variables('webSiteNameQna'))).hostNames[0])]"
        },
        "customSubDomainName": "[variables('webSiteNameQna')]"
      },
      "sku": {
        "name": "[parameters('skuNameQna')]"
      },
      "type": "Microsoft.CognitiveServices/accounts"
    },
    {
      "type": "Microsoft.CognitiveServices/accounts",
      "apiVersion": "2017-04-18",
      "tags": {
        "displayName": "oosAi4Good_LUIS"
      },

      "name": "[variables('accounts_oosAi4Good_LUIS_name')]",
      "location": "eastus",
      "sku": {
        "name": "[parameters('skuNameLuis')]"
      },
      "kind": "LUIS",
      "properties": {
        "customSubDomainName": "[variables('accounts_oosAi4Good_LUIS_name')]",
        "privateEndpointConnections": [],
        "publicNetworkAccess": "Enabled"
      }
    },
    {
      "type": "Microsoft.CognitiveServices/accounts",
      "apiVersion": "2017-04-18",
      "tags": {
        "displayName": "oosAi4Good_LUIS_Authoring"
      },

      "name": "[variables('accounts_oosAi4Good_LUIS_Authoring_name')]",
      "location": "westus",
      "sku": {
        "name": "[parameters('skuNameLuis')]"
      },
      "kind": "LUIS.Authoring",
      "properties": {
        "customSubDomainName": "[variables('accounts_oosAi4Good_LUIS_Authoring_name')]",
        "privateEndpointConnections": [],
        "publicNetworkAccess": "Enabled"
      }
    },
    {
      "type": "Microsoft.CognitiveServices/accounts",
      "apiVersion": "2017-04-18",
      "tags": {
        "displayName": "oosAi4Good_Speech"
      },
      "name": "[variables('accounts_oosAi4Good_Speech_name')]",
      "location": "eastus",
      "sku": {
        "name": "[parameters('skuNameLuis')]"
      },
      "kind": "SpeechServices",
      "properties": {
        "publicNetworkAccess": "Enabled"
      }
    }
  ]
}